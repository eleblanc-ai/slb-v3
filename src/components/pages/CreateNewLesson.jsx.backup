          <div style={{ textAlign: 'center' }}>
            <div style={{
              display: 'flex',
              alignItems: 'center',
              justifyContent: 'center',
              gap: '1rem',
              marginBottom: '0.75rem'
            }}>
              {templateData?.state && (
                <span style={{
                  display: 'inline-block',
                  padding: '0.375rem 0.875rem',
